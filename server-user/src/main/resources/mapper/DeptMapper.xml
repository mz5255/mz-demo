<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mz.mapper.DeptMapper">

    <resultMap id="BaseResultMap" type="com.mz.domain.Dept">
        <id property="id" column="id" jdbcType="INTEGER"/>
        <result property="deptName" column="dept_name" jdbcType="VARCHAR"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="parentId" column="parent_id" jdbcType="INTEGER"/>
        <result property="level" column="level" jdbcType="INTEGER"/>
        <result property="place" column="place" jdbcType="VARCHAR"/>
        <result property="path" column="path" jdbcType="VARCHAR"/>
        <collection property="children" ofType="com.mz.domain.Dept" column="id" select="selectDeptTrees">
            <id property="id" column="id" jdbcType="INTEGER"/>
            <result property="deptName" column="dept_name" jdbcType="VARCHAR"/>
            <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
            <result property="parentId" column="parent_id" jdbcType="INTEGER"/>
            <result property="level" column="level" jdbcType="INTEGER"/>
            <result property="place" column="place" jdbcType="VARCHAR"/>
            <result property="path" column="path" jdbcType="VARCHAR"/>
        </collection>
    </resultMap>

    <sql id="Base_Column_List">
        id,dept_name,create_time,
        parent_id,level,place,
        path
    </sql>
    <select id="selectDeptTrees" resultMap="BaseResultMap" parameterType="integer">
        SELECT
            id,
            dept_name,
            create_time,
            parent_id,
            `level`,
            path,
            place
        FROM
            sys_dept
        where parent_id =#{parentId}
    </select>
    <select id="selectList" resultType="com.mz.domain.Dept">
        SELECT
            id,
            dept_name,
            create_time,
            parent_id,
            `level`,
            path,
            place
        FROM
            sys_dept
    </select>

    <select id="myListByParentId" resultType="com.mz.domain.Dept">
        SELECT
            id,
            dept_name,
            create_time,
            parent_id,
            `level`,
            path,
            place
        FROM
            sys_dept
        where id = #{parentId}
    </select>
    <select id="myListById" resultType="com.mz.domain.Dept">
        SELECT
            id,
            dept_name,
            create_time,
            parent_id,
            `level`,
            path,
            place
        FROM
            sys_dept
        where parent_id = #{id}
    </select>
    <select id="select" resultType="com.mz.domain.Dept">
        SELECT
            id,
            dept_name,
            create_time,
            parent_id,
            `level`,
            path,
            place
        FROM
            sys_dept
        where id = #{id}
    </select>
</mapper>
